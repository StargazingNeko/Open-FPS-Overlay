<Window x:Class="Open_FPS_Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Open_FPS_Overlay"
        mc:Ignorable="d"
        Title="OFO" Height="100" Width="150" ResizeMode="NoResize">
    <Grid>
        <Button Content="Bind Key" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Center" Width="60" Grid.ColumnSpan="3" Grid.Column="2" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,25" TextWrapping="Wrap" Text="HotKey" VerticalAlignment="Center" Width="122" TextAlignment="Center" Grid.ColumnSpan="4" Grid.Column="1"/>

    </Grid>
</Window>
